<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_item_contact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_item_contact"
        app:layout_constraintLeft_toRightOf="@id/img_item_contact"
        android:text="Contact"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_item_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/img_item_contact"
        app:layout_constraintLeft_toRightOf="@id/img_item_contact"
        android:text="Phone"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/holo_red_dark"/>


</androidx.constraintlayout.widget.ConstraintLayout>